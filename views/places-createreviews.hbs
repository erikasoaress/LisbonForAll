<hr class="box3">

<div class="discovery-form">
 
  

  <div class="row justify-content-center">
    <div class="col-lg-6">
      <form action="/reviews/create/{{user._id}}/{{placeId._id}}" method="post">

        <div class="form-group row">
          <label for="name" class="col-sm-3 col-form-label">Name:</label>
          <div class="col-sm-9">
           <input type="text" name="name" id="{{user.username}}" placeholder="{{user.username}}">
          </div>
        </div>

        <div class="form-group row">
          <label for="content" class="col-sm-3 col-form-label">Review:</label>
          <div class="col-sm-9">
            <textarea name="content" id="content" cols="30" rows="10"></textarea>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-9 offset-sm-3 ">
            <button type="submit" class="btn btn-info2 animation">Collaborate</button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>




















