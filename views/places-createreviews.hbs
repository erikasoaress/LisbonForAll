<form action="/reviews/create/{{user._id}}/{{placeId._id}}" method="post">


 <div class="form-group row">
          <label for="name">Name:</label>
          <div class="col-sm-9">
            <input type="text" id="name" name="name" value="{{user.username}}" />
          </div>
        </div>

 <div class="form-group row">
          <label for="content">Review:</label> 
          <div class="col-sm-10">
           <textarea name="content" id="content" cols="10" rows="0"></textarea>
          </div>
        </div>


  <button type="submit" class="btn btn-info animation">Create Review!</button>

</form> 



