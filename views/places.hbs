<body class="places-body">

    <section class="body-card-section">
        {{! -> espa√ßo total }}

        {{#each places}}
        <div class="shape-behind-card">
            {{! <div class="card-size"> }}
                <div class="card row border-0" style="width: 17rem;">
                    <div class="card-body">
                        <img class="card-img-top img" src="{{image}}" alt="Card image Tour" />
                        <h5 class="card-h5">{{name}}</h5>
                        <p class="card-description"><b>Description:</b>{{description}}</p>
                        <p><b>Website: </b><a href="{{website}}" class="click-here-button">Click here</a></p>
                        <p><b>Accessibility level:</b>{{accessibility}}</p>
                        
                        <a href="/places/edit/{{_id}}"class="btn-cards-places animation animation2">Edit place!</a>
                        <a href="/reviews/create/{{_id}}"class="btn-cards-places animation animation2">Create review!</a>
                        <a href="/reviews/list/{{_id}}"class="btn-cards-places animation animation2">See reviews!</a>
                        
                    </div>
                </div>
            </div>
            {{/each}}

    </section>

</body>

